# Update documentation as per the latest from nagios.org

# EXTERNAL_COMMAND_URL -- Where to get the latest documentation.
# Yeah, i know the url says old.nagios.org, but at time of this writing that is current
EXTERNAL_COMMAND_URL=http://old.nagios.org/developerinfo/externalcommands/commandlist.php


download:
	wget -r ${EXTERNAL_COMMAND_URL}
	
build:
	python generate_external_command.py old.nagios.org/developerinfo/externalcommands/commandinfo* > autogenerated_commands.py

lint:
	pylint --rcfile=autogen_commands_pylintrc autogenerated_commands.py

all: download build lint
